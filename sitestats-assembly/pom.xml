<?xml version="1.0"?>
<project>
    <parent>
        <groupId>org.sakaiproject</groupId>
        <artifactId>sitestats</artifactId>
        <version>2.1-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.sakaiproject.sitestats</groupId>
    <artifactId>sakai-sitestats-assembly</artifactId>
    <name>Sakai SiteStats Assembly</name>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>org.sakaiproject.sitestats</groupId>
            <artifactId>sakai-sitestats-api</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.sitestats</groupId>
            <artifactId>sakai-sitestats-impl-hib</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.sitestats</groupId>
            <artifactId>sakai-sitestats-components</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <!-- <type>sakai-component</type> -->
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.sitestats</groupId>
            <artifactId>sakai-sitestats-tool</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.sakaiproject.sitestats</groupId>
            <artifactId>sakai-sitestats-help</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.2-beta-2</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin
                </artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/deploy.xml
                        </descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- append to the packaging phase. -->
                        <goals>
                            <goal>attached</goal>
                            <!-- <goal>single</goal> --> <!-- goals == mojos -->
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
