  <!-- Build -->
  <build>
    <resources>
      <resource>
        <directory>${basedir}/../sitestats-bundles</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
        <excludes>
          <exclude>**/web.xml</exclude>
        </excludes>
      </resource>
    </resources>
    
    <!-- Unit testing -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <!--
            By default, the surefire plugin will automatically include all test classes with the following wildcard patterns:
            "**/Test*.java" - includes all of its subdirectory and all java filenames that start with "Test".
            "**/*Test.java" - includes all of its subdirectory and all java filenames that end with "Test".
            "**/*TestCase.java" - includes all of its subdirectory and all java filenames that end with "TestCase".
        -->
      </plugin>
    </plugins>
    <testResources>
      <testResource>
        <directory>src/test</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </testResource>
      <testResource>
        <directory>${basedir}/../sitestats-pack/src/webapp/WEB-INF</directory>
        <includes>
          <include>hbm-db.xml</include>
        </includes>
      </testResource>
    </testResources>
    
  </build>
  
