<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>sitestats-base</artifactId>
		<groupId>org.sakaiproject</groupId>
		<version>${sitestats.version}</version>
	</parent>
	<name>Sakai SiteStats Service Implementation</name>
	<groupId>org.sakaiproject</groupId>
	<artifactId>sakai-sitestats-impl</artifactId>
	<organization>
		<name>Universidade Fernando Pessoa</name>
		<url>http://www.ufp.pt</url>
	</organization>
	<inceptionYear>2006</inceptionYear>
	<packaging>jar</packaging>

	<dependencies>
		<!-- SiteStats -->
		<dependency>
			<groupId>org.sakaiproject</groupId>
			<artifactId>sakai-sitestats-api</artifactId>
			<version>${sitestats.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sakaiproject</groupId>
			<artifactId>sakai-sitestats-impl-hib</artifactId>
			<version>${sitestats.version}</version>
		</dependency>

		<!-- Sakai -->
		<dependency>
			<groupId>org.sakaiproject</groupId>
			<artifactId>sakai-component</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sakaiproject</groupId>
			<artifactId>sakai-component-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sakaiproject</groupId>
