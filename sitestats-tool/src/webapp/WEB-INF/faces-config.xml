<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<!-- =========== FACES CONFIGURATION FILE ================================== -->

<faces-config>
    
  <application>
    <message-bundle>Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
    </locale-config>
  </application>
      
 	<managed-bean>
		<description>Dynamic Resource Bundle Loader</description>
		<managed-bean-name>msgs</managed-bean-name>
		<managed-bean-class>org.sakaiproject.util.ResourceLoader</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<description>Bundle baseName</description>
			<property-name>baseName</property-name>
			<value>org.sakaiproject.sitestats.tool.bundle.Messages</value>
		</managed-property>
	</managed-bean>



  <!-- =================== Tool Beans ============== -->

	<!-- Pages: Overview, Reports, Preferences, Site List -->
	<managed-bean>
		<description>Overview Bean</description>
		<managed-bean-name>OverviewBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.OverviewBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>serviceBean</property-name>
			<value>#{ServiceBean}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>Reports Bean</description>
		<managed-bean-name>ReportsBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.ReportsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>serviceBean</property-name>
			<value>#{ServiceBean}</value>
		</managed-property>
		<managed-property>
			<property-name>reportParams</property-name>
			<value>#{ReportParams}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>Preferences Bean</description>
		<managed-bean-name>PrefsBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.PrefsBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>serviceBean</property-name>
			<value>#{ServiceBean}</value>
		</managed-property>
		<managed-property>
			<property-name>messageHandler</property-name>
			<value>#{MessageHandler}</value>
		</managed-property>
	</managed-bean>	
	
	<managed-bean>
		<description>Site List Bean</description>
		<managed-bean-name>SiteListBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.SiteListBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>serviceBean</property-name>
			<value>#{ServiceBean}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<description>Server Wide Report Bean</description>
		<managed-bean-name>ServerWideReportBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.ServerWideReportBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>serviceBean</property-name>
			<value>#{ServiceBean}</value>
		</managed-property>
		<managed-property>
			<property-name>serverWideReportManager</property-name>
			<value>#{org_sakaiproject_sitestats_api_ServerWideReportManager}</value>
		</managed-property>        
	</managed-bean>
	
	<!-- Helper beans -->
	
	<managed-bean>
		<description>Menu Bean</description>
		<managed-bean-name>MenuBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.MenuBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
		
	<managed-bean>
		<description>Chart Params Bean</description>
		<managed-bean-name>ChartParams</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.ChartParamsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
		
	<managed-bean>
		<description>Report Params Bean</description>
		<managed-bean-name>ReportParams</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.ReportParamsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
		
	<managed-bean>
		<description>Message Handler Bean</description>
		<managed-bean-name>MessageHandler</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.MessageHandler</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<description>(Utility) Service Bean</description>
		<managed-bean-name>ServiceBean</managed-bean-name>
		<managed-bean-class>org.sakaiproject.sitestats.tool.bean.ServiceBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>sstStatsManager</property-name>
			<value>#{org_sakaiproject_sitestats_api_StatsManager}</value>
		</managed-property>
		<managed-property>
			<property-name>sstEventRegistryService</property-name>
			<value>#{org_sakaiproject_sitestats_api_event_EventRegistryService}</value>
		</managed-property>
		<managed-property>
			<property-name>sstReportManager</property-name>
			<value>#{org_sakaiproject_sitestats_api_report_ReportManager}</value>
		</managed-property>
		<managed-property>
			<property-name>sstStatsUpdateManager</property-name>
			<value>#{org_sakaiproject_sitestats_api_StatsUpdateManager}</value>
		</managed-property>
		<managed-property>
			<property-name>sstAuthz</property-name>
			<value>#{org_sakaiproject_sitestats_api_StatsAuthz}</value>
		</managed-property>
		<managed-property>
			<property-name>toolManager</property-name>
			<value>#{org_sakaiproject_tool_api_ToolManager}</value>
		</managed-property>
		<managed-property>
			<property-name>siteService</property-name>
			<value>#{org_sakaiproject_site_api_SiteService}</value>
		</managed-property>
		<managed-property>
			<property-name>sessionManager</property-name>
			<value>#{org_sakaiproject_tool_api_SessionManager}</value>
		</managed-property>
		<managed-property>
			<property-name>authzGroupService</property-name>
			<value>#{org_sakaiproject_authz_api_AuthzGroupService}</value>
		</managed-property>
		<managed-property>
			<property-name>userDirectoryService</property-name>
			<value>#{org_sakaiproject_user_api_UserDirectoryService}</value>
		</managed-property>
		<managed-property>
			<property-name>timeService</property-name>
			<value>#{org_sakaiproject_time_api_TimeService}</value>
		</managed-property>
		<managed-property>
			<property-name>contentHostingService</property-name>
			<value>#{org_sakaiproject_content_api_ContentHostingService}</value>
		</managed-property>
	</managed-bean>
	

	
	<render-kit>
        <renderer>
            <component-family>javax.faces.Command</component-family>
            <renderer-type>org.apache.myfaces.SortHeader</renderer-type>
            <renderer-class>org.sakaiproject.sitestats.tool.jsf.HtmlSortHeaderRenderer</renderer-class>
        </renderer>
    </render-kit>

	<navigation-rule>
          <from-view-id>/sitestats/*</from-view-id>

          <navigation-case>
            <from-outcome>sitelist</from-outcome>
            <to-view-id>/sitestats/sitelist.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>serverwide</from-outcome>
            <to-view-id>/sitestats/serverwide.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>overview</from-outcome>
            <to-view-id>/sitestats/overview.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>maximize</from-outcome>
            <to-view-id>/sitestats/maximize.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>reports</from-outcome>
            <to-view-id>/sitestats/reports.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>report-results</from-outcome>
            <to-view-id>/sitestats/report-results.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>prefs</from-outcome>
            <to-view-id>/sitestats/prefs.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>perms</from-outcome>
            <to-view-id>/sitestats/perms.jsp</to-view-id>
            <redirect/>
          </navigation-case>

          <navigation-case>
            <from-outcome>unauthorized</from-outcome>
            <to-view-id>/sitestats/unauthorized.jsp</to-view-id>
            <redirect/>
          </navigation-case>
    </navigation-rule>
    

	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.USER_ID_NAME</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.UserIdNameConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.USER_ID_EID</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.UserIdEidConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.EVENT_ID_NAME</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.EventIdNameConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.RES_ACTION</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.ResourceActionConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.RES_REF_IMG</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.ResourceRefImgConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.RES_REF_URL</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.ResourceRefUrlConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.RES_REF_NAME</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.ResourceRefNameConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.LOCALIZED_DATE</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.DateConverter</converter-class>
	</converter>
	<converter>
		<converter-id>org.sakaiproject.sitestats.tool.jsf.converter.LOCALIZED_FULLDATE</converter-id>
		<converter-class>org.sakaiproject.sitestats.tool.jsf.FullDateConverter</converter-class>
	</converter>
</faces-config>
