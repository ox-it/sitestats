<?xml version="1.0" encoding="UTF-8"?>
 <project>
    <pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
	<!--<extend>../../../../Sakai-Src-SVN/sakai_2-2-001/master/project.xml</extend>-->
    <name>Site Stats Components</name>
    <groupId>sakaiproject</groupId>
    <id>sakai-sitestats-components</id>
    <currentVersion>${sakai.version}</currentVersion>
    <organization>
		<name>Universidade Fernando Pessoa</name>
		<url>http://www.ufp.pt</url>
	</organization>
	<inceptionYear>2006</inceptionYear>
	
    <properties>
        <deploy.type>components</deploy.type>
    </properties>
    
    <dependencies>
    	<dependency>
        	<groupId>sakaiproject</groupId>
	        <artifactId>sakai-sitestats-api</artifactId>
			<version>${sakai.version}</version>   
    	</dependency>
      
        <dependency>
        	<groupId>sakaiproject</groupId>
	        <artifactId>sakai-sitestats-component-shared</artifactId>
			<version>${sakai.version}</version>       
	    </dependency>
    </dependencies>

    <build>

      <sourceDirectory>src/java</sourceDirectory>

        <resources>
          <resource>
            <directory>${basedir}/src/bundle</directory>
              <includes>
                <include>**/*.properties</include>
              </includes>
          </resource>

          <resource>
            <directory>src/java</directory>
              <includes>
                <include>**/*.xml</include>
              </includes>
              <excludes>
                <exclude>**/web.xml</exclude>
              </excludes>
          </resource>
      </resources>     

    </build>
</project>